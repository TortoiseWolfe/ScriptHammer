# Storybook specific cache control
/storybook/*
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/storybook/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

/storybook/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Storybook static assets can be cached
/storybook/static/*
  Cache-Control: public, max-age=31536000, immutable

